<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :role %>
    <%= collection_select(:user, :role_id, Role.all, :id, :name, {prompt: true})%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
